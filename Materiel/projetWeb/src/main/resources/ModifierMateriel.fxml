<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.ModifierMaterielController"
            prefWidth="600.0" prefHeight="650.0"
            style="-fx-background-color: #f4f4f4; -fx-padding: 20;">
    <children>
        <VBox spacing="20.0" alignment="TOP_CENTER"
              layoutX="50.0" layoutY="30.0" prefWidth="500.0"
              style="-fx-background-color: white; -fx-border-radius: 20; -fx-padding: 20; -fx-border-color: #bbb; -fx-border-width: 2; -fx-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);">

            <!-- Title -->
            <Label text="Modifier Matériel Médical" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2980b9;"/>

            <!-- Text Fields -->
            <TextField fx:id="nomField" promptText="Nom du matériel"
                       style="-fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 8; -fx-background-color: #f8f9fa; -fx-border-color: #ddd;"/>
            <TextField fx:id="statutField" promptText="Type"
                       style="-fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 8; -fx-background-color: #f8f9fa; -fx-border-color: #ddd;"/>
            <TextField fx:id="prixField" promptText="Prix"
                       style="-fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 8; -fx-background-color: #f8f9fa; -fx-border-color: #ddd;"/>
            <TextField fx:id="descriptionField" promptText="Description"
                       style="-fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 8; -fx-background-color: #f8f9fa; -fx-border-color: #ddd;"/>

            <!-- Image Zone with Button -->
            <StackPane alignment="CENTER"
                       style="-fx-border-color: #bbb; -fx-border-radius: 15; -fx-background-radius: 15;
                           -fx-border-style: dashed; -fx-padding: 15; -fx-background-color: #ffffff; -fx-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);"
                       prefHeight="200" prefWidth="420">

                <ImageView fx:id="imagePreview"
                           fitWidth="300" fitHeight="160" preserveRatio="true"
                           style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 5, 5);"/>

                <Button fx:id="uploadButton"
                        text="📁 Ajouter une image"
                        onAction="#handleUploadImage"
                        style="-fx-background-color: #3498db; -fx-text-fill: white;
                           -fx-background-radius: 10; -fx-padding: 10 20;
                           -fx-font-size: 14px;"/>
            </StackPane>

            <!-- Path (hidden or read-only if needed) -->
            <TextField fx:id="imagePathField"
                       promptText="Chemin de l'image"
                       editable="false"
                       style="-fx-font-size: 12px; -fx-background-color: #eaeaea;
                           -fx-background-radius: 10; -fx-padding: 5 10; -fx-border-color: #ddd;"/>

            <!-- Action Buttons -->
            <HBox spacing="25" alignment="CENTER" style="-fx-padding-top: 20px;">
                <Button text="❌ Annuler" onAction="#handleCancel"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;
                           -fx-background-radius: 20; -fx-font-size: 14px; -fx-padding: 10 20;"/>
                <Button text="✅ Enregistrer" onAction="#handleSave"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white;
                           -fx-background-radius: 20; -fx-font-size: 14px; -fx-padding: 10 20;"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
