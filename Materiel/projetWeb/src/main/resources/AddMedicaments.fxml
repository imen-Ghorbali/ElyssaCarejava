<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<AnchorPane prefHeight="500.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.AddMedicamentsController">

   <children>
      <VBox alignment="CENTER" prefWidth="600.0" prefHeight="500.0"
            style="-fx-background-color: #ffffff; -fx-background-radius: 20px; -fx-padding: 30px; -fx-border-color: #3498db; -fx-border-width: 2; -fx-border-radius: 20px;">

         <!-- Titre -->
         <Label text="Ajouter des Médicaments"
                style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 10px;" />

         <!-- GridPane pour les champs -->
         <GridPane hgap="15" vgap="15" alignment="CENTER"
                   style="-fx-background-color: #f4f4f9; -fx-padding: 20px; -fx-background-radius: 15px;">

            <!-- Champ Nom -->
            <Label text="Nom du médicament :" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #34495e;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nomField" prefWidth="300.0"
                       style="-fx-background-color: #ecf0f1; -fx-background-radius: 8px; -fx-padding: 10px;"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Description -->
            <Label text="Description:" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #34495e;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="descriptionField" prefWidth="300.0"
                       style="-fx-background-color: #ecf0f1; -fx-background-radius: 8px; -fx-padding: 10px;"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Classe -->
            <Label text="Classe:" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #34495e;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="classeCombo" prefWidth="200.0"
                       style="-fx-background-color: #ecf0f1; -fx-background-radius: 8px; -fx-padding: 10px;"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- Prix -->
            <Label text="Prix (DT):" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #34495e;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="prixField" prefWidth="100.0"
                       style="-fx-background-color: #ecf0f1; -fx-background-radius: 8px; -fx-padding: 10px;"
                       GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <!-- Image -->
            <Label text="Image :" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #34495e;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>

            <!-- Zone image avec bouton parcourir intégré -->
            <StackPane prefWidth="150" prefHeight="150"
                       style="-fx-border-color: #bdc3c7; -fx-border-style: dashed; -fx-border-width: 2; -fx-background-color: #ecf0f1; -fx-background-radius: 10px;"
                       GridPane.rowIndex="4" GridPane.columnIndex="1">

               <!-- Prévisualisation image -->
               <ImageView fx:id="imagePreview" fitWidth="150" fitHeight="150" preserveRatio="true"/>

               <!-- Bouton centré -->
               <Button fx:id="uploadButton" text="Parcourir" onAction="#handleUploadImage"
                       style="-fx-background-color: rgba(52,152,219,0.8); -fx-text-fill: white; -fx-font-size: 13px; -fx-background-radius: 6px;"/>
            </StackPane>

            <!-- Champ chemin image (invisible ou secondaire) -->
            <TextField fx:id="imagePathField" editable="false" visible="false" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <!-- Message erreur -->
            <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 12px;"
                   GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.columnSpan="2"/>

            <!-- Bouton soumettre -->
            <Button text="Ajouter Médicament" onAction="#handleSubmit"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 20px; -fx-padding: 15px;"
                    GridPane.rowIndex="7" GridPane.columnIndex="1" GridPane.columnSpan="2"/>
         </GridPane>
      </VBox>
   </children>
</AnchorPane>
