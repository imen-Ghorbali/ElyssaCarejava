<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.AjouterEventsController"
            prefWidth="750.0" prefHeight="820.0"
            stylesheets="@css/styleajout.css">

   <children>
      <!-- Titre principal -->
      <Label text="Ajouter un événement médical"
             layoutX="200" layoutY="20"
             styleClass="header-title"/>

      <!-- Formulaire central -->
      <VBox alignment="TOP_CENTER" spacing="18"
            layoutX="50" layoutY="70"
            prefWidth="650">
         <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
         </padding>

         <!-- Champ Titre -->
         <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="Titre" styleClass="label"/>
            <TextField fx:id="titleField" prefWidth="400" styleClass="input-field"/>
         </HBox>
         <!--descr ia -->
         <Button text="Générer une description avec l'IA"
                 onAction="#handleGenerateDescription"
                 styleClass="ai-generate-button"/>
         <!-- Description -->
         <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="Description" styleClass="label"/>
            <TextField fx:id="description" prefWidth="400" styleClass="input-field"/>
         </HBox>

         <!-- Lieu avec bouton carte -->
         <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="Lieu" styleClass="label"/>
            <TextField fx:id="lieu" prefWidth="300" styleClass="input-field" editable="false"/>
            <Button fx:id="mapButton" text="Carte" onAction="#openMapp" styleClass="map-button"/>
         </HBox>

         <!-- Date -->
         <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="Date" styleClass="label"/>
            <DatePicker fx:id="date" prefWidth="200" styleClass="input-field"/>
         </HBox>

         <!-- Image avec bouton de sélection -->
         <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="Image" styleClass="label"/>
            <TextField fx:id="image" prefWidth="260" editable="false" styleClass="input-field"/>
            <Button text="Parcourir..." onAction="#handleImageBrowse" styleClass="browse-button"/>
         </HBox>

         <ImageView fx:id="previewImage" fitWidth="240" fitHeight="160" styleClass="image-preview"/>

         <!-- Sponsor -->
         <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="Sponsor" styleClass="label"/>
            <ComboBox fx:id="comboBoxSponsor" prefWidth="200" styleClass="input-field"/>
         </HBox>

         <!-- Bouton Ajouter -->
         <Button fx:id="ajouter" text="Ajouter l'événement" onAction="#handleSubmit" styleClass="submit-button"/>
         <Button text="Retour" onAction="#goToList" styleClass="submit-button" />
      </VBox>
   </children>
</AnchorPane>