<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.updateConsultation" style="-fx-background-color: #f5f9ff;">
   <children>
      <AnchorPane layoutX="50.0" layoutY="50.0" prefHeight="500.0" prefWidth="700.0">
         <children>
            <AnchorPane layoutX="5.0" layoutY="6.0" prefHeight="500.0" prefWidth="690.0" style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
               <children>
                  <ImageView fitHeight="79.0" fitWidth="84.0" layoutX="593.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/logo.png" />
                     </image>
                  </ImageView>

                  <!-- Titre agrandi et recentré -->
                  <Text layoutX="50.0" layoutY="63.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Update Consultation : " wrappingWidth="600.0"
                        style="-fx-fill: #3a4a6a;">
                     <font>
                        <Font name="Bell MT Italic" size="40.0" />
                     </font>
                  </Text>

                  <!-- Labels avec taille de police augmentée -->
                  <Label layoutX="62.0" layoutY="133.0" prefHeight="45.0" prefWidth="134.0" text="Time : "
                         style="-fx-text-fill: #5a6a8a;">
                     <font>
                        <Font name="Berlin Sans FB Bold" size="20.0" />
                     </font>
                  </Label>

                  <Label layoutX="62.0" layoutY="199.0" prefHeight="45.0" prefWidth="148.0" text="Speciality :"
                         style="-fx-text-fill: #5a6a8a;">
                     <font>
                        <Font name="Berlin Sans FB Bold" size="20.0" />
                     </font>
                  </Label>

                  <Label layoutX="62.0" layoutY="265.0" prefHeight="45.0" prefWidth="175.0" text="Doctor Name : "
                         style="-fx-text-fill: #5a6a8a;">
                     <font>
                        <Font name="Berlin Sans FB Bold" size="20.0" />
                     </font>
                  </Label>

                  <Label layoutX="65.0" layoutY="331.0" prefHeight="45.0" prefWidth="175.0" text="Status :"
                         style="-fx-text-fill: #5a6a8a;">
                     <font>
                        <Font name="Berlin Sans FB Bold" size="20.0" />
                     </font>
                  </Label>

                  <!-- Champs de formulaire agrandis -->
                  <DatePicker fx:id="tf_time" layoutX="263.0" layoutY="135.0" prefWidth="300.0" prefHeight="40.0"
                              style="-fx-background-color: #f0f4ff; -fx-border-color: #d0d8e8; -fx-border-radius: 3; -fx-font-size: 16;" />

                  <ChoiceBox fx:id="tf_specialite" layoutX="263.0" layoutY="200.0" prefHeight="40.0" prefWidth="300.0"
                             style="-fx-background-color: #f0f4ff; -fx-border-color: #d0d8e8; -fx-border-radius: 3; -fx-font-size: 16;" />

                  <ChoiceBox fx:id="tf_doctor" layoutX="263.0" layoutY="265.0" prefHeight="40.0" prefWidth="300.0"
                             style="-fx-background-color: #f0f4ff; -fx-border-color: #d0d8e8; -fx-border-radius: 3; -fx-font-size: 16;" />

                  <TextArea fx:id="tf_status" layoutX="250.0" layoutY="330.0" prefHeight="100.0" prefWidth="320.0"
                            style="-fx-background-color: #f0f4ff; -fx-border-color: #d0d8e8; -fx-border-radius: 3; -fx-font-size: 16;" />

                  <!-- Boutons agrandis et repositionnés -->
                  <Button fx:id="update" layoutX="150.0" layoutY="460.0" mnemonicParsing="false" onAction="#handleUpdate"
                          prefHeight="45.0" prefWidth="150.0" text="Update"
                          style="-fx-background-color: #6a8bbf; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold; -fx-font-size: 16;" />

                  <Button fx:id="back" layoutX="400.0" layoutY="460.0" mnemonicParsing="false" onAction="#handleBack"
                          prefHeight="45.0" prefWidth="150.0" text="Back"
                          style="-fx-background-color: #bfbfbf; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold; -fx-font-size: 16;" />
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>