<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.StatistiquesController"
            style="-fx-background-color: #f8f9fa;"
            prefHeight="700.0" prefWidth="1000.0">



    <!-- En-tête -->
    <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;"
          alignment="CENTER_LEFT"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">

        </ImageView>
        <Label text="Statistiques des Événements"
               style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </Label>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="lastUpdateLabel"
               style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;"/>
        <Button text="⬅ Retour "
                onAction="#goToAfficherEvents"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-radius: 2;"
                prefHeight="8" />

    </HBox>

    <!-- Conteneur principal -->
    <VBox spacing="20" style="-fx-padding: 20;"
          AnchorPane.topAnchor="60" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

        <!-- Cartes de statistiques -->
        <HBox spacing="20" alignment="TOP_CENTER">
            <!-- Carte Événements Totaux -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
                  alignment="CENTER" spacing="5" prefWidth="200" prefHeight="100">
                <Label text="Événements Totaux" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>
                <Label fx:id="totalEventsLabel" text="0" style="-fx-text-fill: #2c3e50; -fx-font-size: 28px; -fx-font-weight: bold;"/>
            </VBox>

            <!-- Carte Sponsors Actifs -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
                  alignment="CENTER" spacing="5" prefWidth="200" prefHeight="100">
                <Label text="Sponsors Actifs" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>
                <Label fx:id="activeSponsorsLabel" text="0" style="-fx-text-fill: #2c3e50; -fx-font-size: 28px; -fx-font-weight: bold;"/>
            </VBox>
        </HBox>

        <!-- Graphique et Top Sponsors -->
        <HBox spacing="20" alignment="TOP_CENTER">
            <!-- Graphique -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
                  spacing="10" prefWidth="600" prefHeight="400">
                <Label text="Événements par Sponsor" style="-fx-text-fill: #2c3e50; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                <BarChart fx:id="sponsorChart" legendVisible="false" animated="false" prefWidth="550" prefHeight="350">
                    <xAxis>
                        <CategoryAxis label="Sponsors" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Nombre d'événements" />
                    </yAxis>
                </BarChart>
            </VBox>

            <!-- Top Sponsors -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
                  spacing="10" prefWidth="300" prefHeight="400">
                <Label text="Top 5 Sponsors" style="-fx-text-fill: #2c3e50; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Separator/>
                <VBox fx:id="topSponsorsContainer" spacing="8"/>
                <Region VBox.vgrow="ALWAYS"/>
                <Button text="Rafraîchir" onAction="#refreshStats"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;">

                </Button>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>