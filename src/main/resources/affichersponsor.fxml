<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.affichersponsorController"
            stylesheets="@css/styleaff.css"
            prefWidth="800.0" prefHeight="600.0"
            style="-fx-background-color: #f0f5f9;">

    <!-- Bandeau supérieur -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-bar" BorderPane.alignment="TOP_CENTER">
            <padding>
                <Insets top="20" bottom="15" left="30" right="20"/>
            </padding>
            <Label text="Liste des Sponsors" styleClass="header-title"/>
        </HBox>
    </top>

    <!-- Contenu central : Tableau -->
    <center>
        <VBox spacing="20" alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="30" bottom="30" left="30"/>
            </padding>

            <TableView fx:id="sponsorTable" prefHeight="500" prefWidth="740" styleClass="styled-table">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" visible="false" prefWidth="50"/>
                    <TableColumn fx:id="nameColumn" text="Nom" prefWidth="200"/>
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="250"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="150"/>
                    <TableColumn fx:id="prixColumn" text="Prix (DT)" prefWidth="100"/>

                    <!-- Colonne Action avec boutons -->
                    <TableColumn fx:id="actionColumn" text="Actions" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Pied de page : Bouton Ajouter -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="20" styleClass="footer-bar" BorderPane.alignment="BOTTOM_CENTER">
            <padding>
                <Insets top="15" right="30" bottom="15" left="30"/>
            </padding>
            <Button text="➕ Ajouter un sponsor" fx:id="addButton" onAction="#AjouterSponsor" styleClass="add-button"/>
        </HBox>
    </bottom>

</BorderPane>
