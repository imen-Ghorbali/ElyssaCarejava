<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.affichersponsorController"
            stylesheets="@css/styleaff.css"
            prefWidth="800.0" prefHeight="600.0">

    <!-- Titre en haut -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f0f0f0;" BorderPane.alignment="TOP_CENTER">
            <padding>
                <Insets top="20" bottom="10" left="20" right="20"/>
            </padding>
            <Label text="🤝 Liste des Sponsors"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        </HBox>
    </top>

    <!-- Tableau des sponsors au centre -->
    <center>
        <VBox spacing="10" alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            <TableView fx:id="sponsorTable" prefHeight="500" prefWidth="760" style="-fx-border-color: #dcdcdc;">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" visible="false" prefWidth="50"/>
                    <TableColumn fx:id="nameColumn" text="Nom" prefWidth="150"/>
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="150"/>
                    <TableColumn fx:id="prixColumn" text="Prix" prefWidth="100"/>
                    <TableColumn fx:id="actionColumn" text="Actions" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Bas avec des boutons -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-background-color: #f9f9f9;" BorderPane.alignment="BOTTOM_CENTER">
            <padding>
                <Insets top="10" bottom="10" left="20" right="20"/>
            </padding>
            <Button text="Ajouter un sponsor" fx:id="addButton" onAction="#ajouterSponsor" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>


        </HBox>
    </bottom>

</BorderPane>
