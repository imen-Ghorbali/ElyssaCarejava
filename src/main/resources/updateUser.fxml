<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f5f9ff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.updateUser">
   <children>
      <AnchorPane layoutX="50.0" layoutY="50.0" prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
         <children>
            <!-- Logo agrandi -->
            <ImageView fitHeight="79.0" fitWidth="84.0" layoutX="595.0" layoutY="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/logo.png" />
               </image>
            </ImageView>

            <!-- Titre centré et agrandi -->
            <Text layoutX="175.0" layoutY="70.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #3a4a6a;" text="Update your Profile : " wrappingWidth="450.0">
               <font>
                  <Font name="Bell MT Italic" size="36.0" />
               </font>
            </Text>

            <!-- Section des champs de formulaire -->
            <Label layoutX="100.0" layoutY="150.0" prefHeight="40.0" prefWidth="150.0" style="-fx-text-fill: #5a6a8a;" text="NAME : ">
               <font>
                  <Font name="Berlin Sans FB Bold" size="20.0" />
               </font>
            </Label>

            <TextField fx:id="name2" layoutX="270.0" layoutY="150.0" prefHeight="45.0" prefWidth="350.0" promptText="Name" style="-fx-background-color: #f0f4ff; -fx-border-color: #d0d8e8; -fx-border-radius: 5; -fx-text-fill: #333333; -fx-font-size: 16; -fx-padding: 5;" />

            <Label layoutX="100.0" layoutY="230.0" prefHeight="40.0" prefWidth="150.0" style="-fx-text-fill: #5a6a8a;" text="EMAIL :">
               <font>
                  <Font name="Berlin Sans FB Bold" size="20.0" />
               </font>
            </Label>

            <TextField fx:id="email2" layoutX="270.0" layoutY="230.0" prefHeight="45.0" prefWidth="350.0" promptText="Email" style="-fx-background-color: #f0f4ff; -fx-border-color: #d0d8e8; -fx-border-radius: 5; -fx-text-fill: #333333; -fx-font-size: 16; -fx-padding: 5;" />

            <!-- Section des boutons réorganisée -->
            <Button fx:id="back" layoutX="100.0" layoutY="350.0" mnemonicParsing="false" onAction="#handleBack" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #6a8bbf; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold; -fx-font-size: 16;" text="Back" />

            <Button fx:id="delete" layoutX="275.0" layoutY="350.0" mnemonicParsing="false" onAction="#deleteUser" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #6a8bbf; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold; -fx-font-size: 16;" text="Delete" />

            <Button fx:id="update" layoutX="450.0" layoutY="350.0" mnemonicParsing="false" onAction="#updateUser" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #6a8bbf; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold; -fx-font-size: 16;" text="Update" />

            <!-- Bouton Update Password centré -->
            <Button fx:id="updatePassword" layoutX="275.0" layoutY="420.0" mnemonicParsing="false" onAction="#handleUpdatePassword" prefHeight="45.0" prefWidth="250.0" style="-fx-background-color: #6a8bbf; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold; -fx-font-size: 16;" text="Update Password" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
