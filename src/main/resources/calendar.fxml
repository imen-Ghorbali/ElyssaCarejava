<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.CalendarController"
            stylesheets="@css/calendar.css"
>

    <!-- Navigation -->
    <HBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Button text="⟵ Mois précédent" onAction="#handlePreviousMonth" styleClass="nav-button"/>
        <Label fx:id="monthLabel" styleClass="month-label"/>
        <Button text="Mois suivant ⟶" onAction="#handleNextMonth" styleClass="nav-button"/>
        <Button text="retour" onAction="#goToAfficherEvents" styleClass="nav-button"/>
    </HBox>

    <!-- Calendar Grid -->
    <GridPane fx:id="calendarGrid" hgap="10" vgap="10" AnchorPane.topAnchor="60" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10" styleClass="calendar-grid">
        <columnConstraints>
            <ColumnConstraints percentWidth="14.3"/>
            <ColumnConstraints percentWidth="14.3"/>
            <ColumnConstraints percentWidth="14.3"/>
            <ColumnConstraints percentWidth="14.3"/>
            <ColumnConstraints percentWidth="14.3"/>
            <ColumnConstraints percentWidth="14.3"/>
            <ColumnConstraints percentWidth="14.3"/>
        </columnConstraints>
    </GridPane>
</AnchorPane>
