<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.detailseventsController"
      stylesheets="@css/styledetails.css"
      spacing="20"
      alignment="CENTER"
      styleClass="event-details-container"
      xmlns="http://javafx.com/javafx">

    <padding>
        <Insets top="40" right="50" bottom="40" left="50"/>
    </padding>

    <Label fx:id="titleLabel" styleClass="event-title"/>
    <ImageView fx:id="imageView" fitWidth="400" fitHeight="250" preserveRatio="true"/>

    <VBox spacing="10" styleClass="info-box">
        <Label fx:id="descriptionLabel" wrapText="true" styleClass="event-label"/>
        <Label fx:id="lieuLabel" styleClass="event-label"/>
        <Label fx:id="dateLabel" styleClass="event-label"/>
        <Label fx:id="sponsorLabel" styleClass="event-label"/>
    </VBox>
</VBox>
