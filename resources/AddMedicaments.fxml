<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.AddMedicamentsController">

   <children>
      <VBox layoutX="30.0" layoutY="20.0" spacing="15.0" prefWidth="540.0">
         <children>

            <!-- Champ Nom -->
            <HBox spacing="10">
               <Label text="Nom:" style="-fx-font-weight: bold;"/>
               <TextField fx:id="nomField" prefWidth="300.0" />
            </HBox>

            <!-- Champ Description -->
            <HBox spacing="10">
               <Label text="Description:" style="-fx-font-weight: bold;"/>
               <TextField fx:id="descriptionField" prefWidth="300.0" />
            </HBox>

            <!-- Champ Classe -->
            <HBox spacing="10">
               <Label text="Classe:" style="-fx-font-weight: bold;"/>
               <TextField fx:id="classeCombo" prefWidth="200.0" />
            </HBox>

            <!-- Champ Prix -->
            <HBox spacing="10">
               <Label text="Prix (DT):" style="-fx-font-weight: bold;"/>
               <TextField fx:id="prixField" prefWidth="100.0" />
            </HBox>

            <!-- Sélection d'image -->
            <HBox spacing="10" alignment="CENTER_LEFT">
               <Label text="Image:" style="-fx-font-weight: bold;"/>
               <TextField fx:id="imagePathField" prefWidth="250.0" editable="false"/>
               <Button fx:id="uploadButton" text="Parcourir" onAction="#handleUploadImage"/>
            </HBox>

            <!-- Aperçu image -->
            <ImageView fx:id="imagePreview"
                       fitHeight="150" fitWidth="150"
                       style="-fx-border-color: #ddd; -fx-border-width: 1;"/>

            <!-- Message d'erreur -->
            <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 12;"/>

            <!-- Bouton de soumission -->
            <Button text="Ajouter Médicament" onAction="#handleSubmit"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>

         </children>
      </VBox>
   </children>
</AnchorPane>